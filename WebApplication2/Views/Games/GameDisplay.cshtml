<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Static Billizard</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/liteaccordion.css">
</head>

<body>
    <!---------导航--------------------------------->
    <header>
        <div class="">
            <a href=@Url.Action("Index","Home")><img style="width: 140px; margin-top: 8px;  margin-left: 20px;" src="/Images/logo2.jpg" /></a>
            <ul>
                @if (Session["user_id"] == null)
                {
                    <li><a class="theme-hover" href="/User/Login"><b>登录</b></a></li>
                    <li><a class="theme-hover" href="/User/Register"><b>注册</b></a></li>
                }
                else
                {
                    <li><a class="theme-hover" href="#"><b>@Session["user_id"]</b></a></li>
                        <li><a class="theme-hover" href="/User/Exit"><b>退出</b></a></li>
                }
            </ul>
            <ul class="">
                <li class="theme-hover"><a href="/News/News"><b>新闻中心</b></a></li>
                <li class="theme-hover"><a href="/Games/Shooting"><b>射击游戏</b></a></li>
                <li class="theme-hover"><a href="/Games/RPG"><b>角色扮演</b></a></li>
                <li class="theme-hover"><a href="/Games/Sports"><b>体育游戏</b></a></li>
                <li class="theme-hover">
                    <form action="/Home/FindGame" method="post">
                        <input type="text" name="FindGameName" /><button><b>搜索游戏</b></button>
                    </form>
                </li>
               
            </ul>
        </div>
    </header>

    <!--------游戏名称、图片、链接----------->
    @{ game g = (game)ViewData["GameDisplay"];}
    @if (g != null)
    {
    <div style="color: #9e9e9e;" class="register">
        <Span class="register1">@g.game_type</Span>
        <span class="register2">—— 最新资讯，最新报道，尽在静视游戏</span>
    </div>
    <h2></h2>
    <h4 style="font-size:50px; margin-top:50px;">@g.game_name</h4>
    <div style="margin-top:50px; ">
        <div style="margin-top:100px;">
            <div style="width:100%;height:200px;padding:0 0 0 50px;">
                <div style="float:left"><img style="" width="300" height="200" src=@g.game_pic></div>
                <div style="float:left;margin-left:50px;height:200px;width:200px;padding:10px 0 0 10px;">
                    <ul>
                        <li>游戏类型：<span>@g.game_type</span></li>
                        <li>发布网站:<span>Static Billizard</span></li>
                        @if (Session["user_id"] == null)
                        {
                            <li>登陆查看下载链接：<a href="/User/Login"><img src="/Images/Login.png" width="200" height="50"/></a></li>
                        }
                        else { 

                            <li>下载链接<a href="~/download/3DMGAME-Call.of.Duty.Infinite.Warfare.Digital.Deluxe.Edition-3DM.torrent"><img src="/Images/download.png" width="150" height="60" /></a></li>
                        }
                    </ul>
                </div>
                
            </div>
            
            <h2 style="margin: 30px 0 15px;text-shadow: 1px 1px 0 white;border-bottom: 1px solid #333;padding-bottom: 5px;"></h2>
            <p><font style="font-size:20px;">游戏截图</font></p>
            <div style="margin-top:50px;clear:both;text-align:center;">
                <img style="margin:0 auto;width:900px;" height="500" src=@g.game_pic_show />
            </div>
            <h2 style="margin: 30px 0 15px;text-shadow: 1px 1px 0 white;border-bottom: 1px solid #333;padding-bottom: 5px;"></h2>
            <p><font style="font-size:20px;">游戏内容</font></p>
            <div style="margin-top:50px;">
                <p>@g.game_content
                </p>
            </div>
        </div>
    </div>
    }
    else
    {
            <div>
                <span>
                    暂无游戏记录
                </span>
            </div>
        
    }
    <!-------------------------底部----------->
    <h2 style="margin: 30px 0 15px;text-shadow: 1px 1px 0 white;border-bottom: 1px solid #333;padding-bottom: 5px;"></h2>
    <div class="centre">
        <p>黑龙江大学·软件工程2班</p>
        <p>杨垒-毕业设计</p>
        <p>2017</p>
    </div>
</body>
</html>

